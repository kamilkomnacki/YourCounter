<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8AFA99"
        android:orientation="horizontal"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:weightSum="7"
        tools:context="com.komnacki.yourcounter.MainActivity">

        <TextView
            android:id="@+id/tv_hours"
            style="@style/timeUnitTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="HH" />

        <TextView
            android:id="@+id/tv_colon_hours_minutes"
            style="@style/timeUnitTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":" />

        <TextView
            android:id="@+id/tv_minutes"
            style="@style/timeUnitTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="MM" />

        <TextView
            android:id="@+id/tv_colon_minutes_seconds"
            style="@style/timeUnitTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":" />

        <TextView
            android:id="@+id/tv_seconds"
            style="@style/timeUnitTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="SS" />

        <TextView
            android:id="@+id/tv_colon_seconds_miliseconds"
            style="@style/timeUnitTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":" />

        <TextView
            android:id="@+id/tv_miliseconds"
            style="@style/timeUnitTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp">

        <ImageButton
            android:id="@+id/btn_img_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_settings"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btn_img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_help"
            android:padding="8dp"/>


    </LinearLayout>


</RelativeLayout>